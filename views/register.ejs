      <form id="registerForm" action="/register" method="POST" enctype="multipart/form-data">



  


        <h1 class="create">Create an account </h1>
        <div class="file-upload">
          <div class="file-input-wrapper">

         <button class="file-input-button">Choose image display</button>
            <input type="file" name="image" id="file-input" accept="image/*" class="file-input" required onchange="previewImage(event)">
          </div>
