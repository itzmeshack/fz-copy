     <script>

      function showToast(message) {
          const toastContainer = document.getElementById('toast-container');
          const toast = document.createElement('div');
          toast.classList.add('toast');
          toast.innerText = message;
      
          toastContainer.appendChild(toast);
      
          // Show the toast
          setTimeout(() => {
            toast.classList.add('show');
          }, 100);
      
          // Hide the toast after 3 seconds
          setTimeout(() => {
            toast.classList.remove('show');
            setTimeout(() => {
              toastContainer.removeChild(toast);
            }, 500);
          }, 2000);
        }
      
      
      
    function toggleFavorite(event) {
    event.preventDefault();
    const icon = event.currentTarget.querySelector('i');
    const movieId = event.currentTarget.dataset.movieId;
    const storageKey = 'favorite_' + movieId;
    const isFavorite = localStorage.getItem(storageKey) === 'false';
    const url =  `/add-to-favorites/movie/${movieId}`;
    const method =  'POST';
    const bookmark = document.querySelector('#book')

    fetch(url, { method: method })
        .then(response => {
            if (response.ok) {
                localStorage.setItem(storageKey, !isFavorite);
                icon.classList.toggle('fa-bookmark', !isFavorite);
                bookmark.style.display = 'none'
              
                showToast(isFavorite ? 'Removed movie from favorites' : 'Added movie to favorites');
            } else {
                console.error('Failed to update favorite status');  
              
            }
        })
        .catch(error => console.error('Error updating favorite status:', error));
}

        


          </script>
      
    
  
  
